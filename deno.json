{
  "imports": {
    "std/": "https://deno.land/std@0.224.0/",
    "deno-dom": "https://deno.land/x/deno_dom@v0.1.45/deno-dom-wasm.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true
  },
  "tasks": {
    "dev": "netlify dev",
    "build": "deno run --allow-read --allow-write --allow-env scripts/build.ts"
  },
  "lint": {
    "exclude": ["netlify/edge-functions/lib/readability.js"],
    "rules": {
      "include": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100
  }
}
