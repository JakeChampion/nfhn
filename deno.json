{
  "imports": {
    "std/": "https://deno.land/std@0.224.0/",
    "deno-dom": "jsr:@nicolo-ribaudo/deno-dom@^0.1.45"
  },
  "compilerOptions": {
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": true
  },
  "tasks": {
    "dev": "netlify dev",
    "build": "deno run --allow-read --allow-write --allow-env scripts/build.ts"
  },
  "lint": {
    "exclude": [
      "netlify/edge-functions/lib/readability.js",
      "static/"
    ],
    "rules": {
      "include": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100
  }
}
